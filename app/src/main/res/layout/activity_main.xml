<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/result"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/showResult"
            android:layout_weight="0.11" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/button"
                android:onClick="btn7Clicked"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/button2"
                android:onClick="btn8Clicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/button3"
                android:onClick="btn9Clicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:id="@+id/button4"
                android:layout_weight="0.12"
                android:onClick="btnClearClicked"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="351dp"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button5"
                android:onClick="btn6Clicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button6"
                android:onClick="btn5Clicked"/>

            <Button
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button7"
                android:onClick="btn4Clicked"/>

            <Button
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button8"
                android:layout_weight="0.46"
                android:onClick="btn3Clicked"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="348dp"
            android:layout_height="wrap_content">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button9"
                android:onClick="btn2Clicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button10"
                android:onClick="btn1Clicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/button11"
                android:onClick="btn0Clicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:text="."
                android:id="@+id/button17"
                android:onClick="btnPointClicked"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            android:weightSum="1">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/button12"
                android:layout_weight="0.13"
                android:onClick="btnPlusClicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/button13"
                android:layout_weight="0.13"
                android:onClick="btnMinusClicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:id="@+id/button14"
                android:layout_weight="0.18"
                android:onClick="btnMulClicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:id="@+id/button15"
                android:layout_weight="0.13"
                android:onClick="btnDivClicked"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/button16"
                android:layout_weight="0.20"
                android:onClick="btnEqualClicked"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
